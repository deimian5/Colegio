@model Model.Materia


<div class="row">
    <div class="well well-sm">
        <div class="row">
            @using (Html.BeginForm("GuardarMateria", "Home", FormMethod.Post, new { id = "FrmMateria" }))
            {
                <div class="panel-default">
                    <div class="panel-heading">
                        Informacion Personal
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Nombre_Materia)
                            @Html.TextBoxFor(x => x.Nombre_Materia, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Nombre_Materia, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            }
        </div>
    </div>

